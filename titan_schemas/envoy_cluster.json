{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "envoy_cluster.json",
    "description": "titanSideCars.envoy.clusters.cluster",
    "type": "object",
    "properties": {
        "local-myapp": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "addRequestHeaders": {
                    "type": "object"
                },
                "addResponseHeaders": {
                    "type": "object"
                },
                "directResponseCode": {
                    "oneOf": [
                        {
                            "type": "integer",
                            "pattern": "^[1-5][0-9]{2}$"
                        },
                        {
                            "type": "string",
                            "pattern": "^\"[1-5][0-9]{2}\"$"
                        }
                    ]
                },
                "directResponseMessage": {
                    "type": "string"
                },
                "gateway": {
                    "type": "object",
                    "properties": {
                        "defaultBackend": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "port": {
                            "oneOf": [
                                {
                                    "type": "integer"
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[0-9]+$"
                                }
                            ]
                        }
                    }
                },
                "healthChecks": {
                    "type": "object",
                    "properties": {
                        "path": {
                            "type": "string"
                        }
                    }
                },
                "idleTimeout": {
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "string",
                            "pattern": "^[0-9]+$"
                        }
                    ]
                },
                "path": {
                    "type": "string"
                },
                "removeRequestHeaders": {
                    "type": "object"
                },
                "removeResponseHeaders": {
                    "type": "object"
                },
                "ratelimit": {
                    "type": "object",
                    "_comment": "Do not config ratelimit under envoy cluster, use ingress instead"
                },
                "retryPolicy": {
                    "type": "object"
                },
                "routes": {
                    "type": "array",
                    "items": {
                        "$ref": "envoy_cluster_route.json"
                    },
                    "_comment": "Do not config route under envoy local-myapp cluster, use ingress instead"
                },
                "scheme": {
                    "type": "string"
                },
                "timeout": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "not": {
                "required": [
                    "ratelimit",
                    "routes"
                ]
            }
        }
    },
    "patternProperties": {
        "^(?!local-myapp$)[a-zA-Z_-]+": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "healthChecks": {
                    "type": "object",
                    "properties": {
                        "startup": {
                            "type": "object"
                        },
                        "liveness": {
                            "type": "object"
                        },
                        "readyness": {
                            "type": "object"
                        }
                    },
                    "additionalProperties": false
                },
                "idleTimeout": {
                    "oneOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "string",
                            "pattern": "^[0-9]+$"
                        }
                    ]
                },
                "path": {
                    "type": "string"
                },
                "ratelimit": {
                    "type": "object",
                    "_comment": "Do not config ratelimit under envoy remote-myapp cluster, only supported under ingress"
                },
                "retryPolicy": {
                    "type": "object"
                },
                "routes": {
                    "type": "array",
                    "items": {
                        "$ref": "envoy_cluster_route.json"
                    }
                },
                "scheme": {
                    "type": "string"
                },
                "timeout": {
                    "type": "string",
                    "_comment": "should we use regex for config like 10s, 5m"
                }
            }
        },
        "additionalProperties": false,
        "not": {
            "required": [
                "ratelimit"
            ]
        }
    },
    "additionalProperties": false
}